.form-group(
  ng-class="{'has-error': helpers.hasError(this.$parent.$parent, field.id)}"
)
  label.col-md-3.control-label(
    ng-show='field.name',
    for='{{field.id}}'
  ) {{field.name}}

  .col-md-4
    input.form-control(
      id="{{field.id}}",
      name="{{field.id}}"
      type="text",
      ng-model="field.value",
      ng-change="change(field.id, field.value, this)",
      ng-required='field.required'
    )

    span.help-block.error(
      ng-if='field.required',
      ng-show="helpers.hasError(this.$parent.$parent, field.id, 'required')"
    ) {{field.name}} is required.

    span.help-block.error(
      ng-if='!!field.minlength && field.minlength > 0',
      ng-show="helpers.hasError(this.$parent.$parent, field.id, 'minlength')"
    ) {{field.name}} must be at least {{field.minlength}} characters long.
